<!DOCTYPE html>
<html>
  <head>
    <title>AncientScroll</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="<%= body_variables %>">
    <aside>
      <%= link_to 'TODO', class: 'brand' do %>
        <%= fa Wiki.config.primary_icon %>
      <% end %>

      <nav>
        <%= wiki_object_type_path_link('Regions') %>
        <%= wiki_object_type_path_link('Provinces') if Wiki.config.provinces? %>
        <%= wiki_object_type_path_link('Locations') %>
        <%= wiki_object_type_path_link('Quests') %>

        <%= divider %>

        <%= wiki_object_type_path_link('Characters') %>
        <%= wiki_object_type_path_link('Organizations') %>
        <%= wiki_object_type_path_link('Trainer Classes', 'trainer_classes') %>

        <%= divider %>

        <%= wiki_object_type_path_link('PokÃ©mon', 'pokemon') %>
        <%= wiki_object_type_path_link('Abilities') %>
        <%= wiki_object_type_path_link('Moves') %>

        <%= divider %>

        <%= active_link_to 'Wiki Home', wiki_object_path('~home') %>
        <%= active_link_to 'Guidelines', wiki_object_path('~guidelines') %>
        <%= active_link_to 'FAQ', wiki_object_path('~faq') %>
        <%= active_link_to 'Adminland', admin_land_path if can_create_object? %>
        <%= active_link_to 'Creators', '/creators' %>
        <%= active_link_to 'Github', Wiki.config.github_url if Wiki.config.github_url %>
      </nav>

      <div class="me">
        <% if Current.user %>
          <%= link_to "@#{Current.user.username}", Current.user.path, class: 'username' %>
          <small><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></small>
        <% else %>
          <%= button_to 'Sign In', new_user_session_path, class: 'button--primary' %>
        <% end %>
      </div>
    </aside>

    <main>
      <div class="main__content">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
