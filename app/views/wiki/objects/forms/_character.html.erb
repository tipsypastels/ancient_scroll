<%= wiki_object_form(character) do |f| %>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, [['Unset', nil]] + Character.genders.keys.map { |w| [w.humanize, w]} %>
  </div>

  <div class="field">
    <%= f.label :specialty %>
    <%= f.text_field :specialty %>
  </div>

  <div class="field">
    <%= f.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>